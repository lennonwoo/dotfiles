{
    "python.disablePromptForFeatures": [
        "pylint"
    ],
    "explorer.confirmDelete": false,
    "workbench.colorTheme": "Monokai",
    "files.autoSave": "afterDelay",
    "editor.fontSize": 13,

    // vim realted
    "vim.useSystemClipboard": true,
    "vim.hlsearch": true,
    "vim.autoindent": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        { "before": ["z", "C"],                  "commands": ["editor.foldAll"] },
        { "before": ["z", "O"],                  "commands": ["editor.unfoldAll"] },
        { "before": ["C-o"],                     "commands": ["workbench.action.navigateBack"] },
        { "before": ["C-i"],                     "commands": ["workbench.action.navigateForward"] },
        { "before": ["<C-n>"],                   "commands": [":nohl"] },
        { "before": ["Y"],                       "after": ["y", "$"] },
    ],
    "vim.handleKeys": {
        "<C-w>": false,
        "<C-m>": true,
        // "<C-d>": false,
        "<A-v>": false,
        "<A-f>": false,
        "<A-r>": false,
        "<A-l>": false,
        "<C-c>": false,
    },


    "window.zoomLevel": 0,
    "window.menuBarVisibility": "visible",
    "window.title": "${activeEditorLong} Code-OSS",
    "workbench.startupEditor": "newUntitledFile",
    "editor.snippetSuggestions": "top",
    "editor.formatOnPaste": true,
    "search.location": "sidebar",
    "git.ignoreLegacyWarning": true,
    "workbench.editor.enablePreview": false,
    "files.associations": {
        "*.el": "lisp"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.idea": true,
        "**/.vscode": true,
        "**/.pytest_cache": true,
        "**/__pycache__": true,
        "**/cmake-build-debug": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/build": false,
        "**/*.o": true,
        "**/*.a": true,
        "**/*.d": true,
        "**/*.pyc": true,
        "**/GPATH": true,
        "**/GRTAGS": true,
        "**/GSYMS": true,
        "**/GTAGS": true,
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "vim.disableExtension": false,
    "editor.cursorStyle": "line-thin",
    "editor.lineNumbers": "relative",
    "explorer.openEditors.visible": 0,
    // "explorer.autoReveal": false,

    "workbench.activityBar.visible": true,
    "workbench.statusBar.visible": true,
    "workbench.list.multiSelectModifier": "alt",
    "editor.minimap.enabled": false,
    "explorer.confirmDragAndDrop": false,
    "editor.tabSize": 4,
    "window.enableMenuBarMnemonics": false,
}
